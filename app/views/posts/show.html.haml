- tag_lists = [["folder-open", "カテゴリー", @post.categories], ["tag", "タグ", @post.tags]]

- if notice
  %div#notice.alert.alert-primary= notice

%div.row
  %div.col-12.col-md-8.markdown

    %div.post-show-img.mb-3
      - @post.tags.each do |tag|
        %i.fab{class: "fa-#{tag}"}

    %small.text-muted
      %i.fas.fa-upload.mr-3
        = @post.created_at.strftime("%Y/%m/%d")
      %i.fas.fa-redo-alt.mr-3
        = @post.updated_at.strftime("%Y/%m/%d")
      = render "tag_lists", tag_lists: tag_lists

    %div.mt-3
      = markdown @post.body

    %div.mt-5
      %div.btn-group
        - if admin_signed_in?    
          = link_to 'Edit', edit_post_path(@post), class: "btn btn-success"
        = link_to 'Back', posts_path, class: "btn btn-secondary"

    %div.mt-5
      = render "bottom-content", random_posts: @random_posts

  %div.col-0.col-md-4.d-none.d-md-block
    = render "sidebar", posts: @posts, latest_posts: @latest_posts, related_posts: @related_posts, tags: @tags, categories: @categories


