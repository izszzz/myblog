%div.card.w-100.mb-2.hvr-backward
  %div.row.g-0
    %div.col-md-0.col-lg-4.sm-x.d-md-none.d-lg-flex.justify-content-center.align-items-center.bg-secondary.text-white
      %i.display-6{class: "devicon-#{post.tags[0]}-plain"}
    %div.col-md-12.col-lg-8
      %div.card-body
        %h6.card-title= link_to post.title, post, class: "text-body stretched-link"
        %small.text-muted
          = post.created_at.strftime("%Y/%m/%d")