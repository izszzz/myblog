%h1 iz profile
%ul.list-group
  - profiles.each do |profile|
    %li.list-group-item= profile

%h2.mt-5 Link
%ul.list-group
  - links.each do |name, path, classname|
    = link_to path, class: "list-group-item list-group-item-action" do
      %i.colored.pr-3.fs-5{class: "devicon-#{classname}"}
      = name

%h2.mt-5 Skill

%div#accordionLang.accordion
- lang_skills.each do |num, title, classname, details|
  %div.accordion-item
    %h6.accordion-header.bg-white{id: "heading" + num}
      %button.accordion-button.collapsed{type: "button", "data-toggle" => "collapse", "data-target" => "#collapse" + num, "aria-expanded" => "false", "aria-controls" => "collapse" + num}
        %i.colored.pr-3.fs-5{class: "devicon-#{classname}"}
        = title
    %div.accordion-collapse.collapse{id: "collapse" + num, "aria-labelledby" => "heading" + num, "data-parent" => "#accordionLang"}
      %div.accordion-body.bg-white
        %ul.list-group
          - details.each do |title, classname|
            %li.list-group-item
              %i.colored.pr-3.fs-5{class: "devicon-#{classname}"}
              = title

%ul.list-group.mt-5
  - other_skills.each do |title, classname|
    %li.list-group-item
      %i.colored.pr-3.fs-5{class: classname}
      = title
