  lang_skills = [
    ["first", "Ruby", "ruby-plain", [["Ruby on Rails", "rails-plain"]]], 
    ["second" , "Node.js", "nodejs-plain", [
        ["Typescript", "typescript-plain"],
        ["Express", "express-original"],
